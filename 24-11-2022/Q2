	{
		
		File obj1=new File("C:\\New folder\\Demo file.txt");
		Scanner sc = new Scanner(obj1);
		int counter = 0;
		while(sc.hasNextLine()) 
		{
			// count words
					String str1 = sc.nextLine();
					String[]arr = str1.split(" ");
					// 
